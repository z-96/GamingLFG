              <option value="vog-norm-boss">Vault of Glass Aetheon - Normal</option>
              <option value="vog-norm-sherpa">Vault of Glass Sherpa Help - Normal</option>
              <option value="crota-norm-fr">Crota's End Fresh Run - Normal</option>
              <option value="crota-norm-cp">Crota's End Checkpoint - Normal</option>
              <option value="crota-norm-boss">Crota's End Crota - Normal</option>
              <option value="crota-norm-sherpa">Crota's End Sherpa Help - Normal</option>
              <option value="kf-norm-fr">King's Fall Fresh Run - Normal</option>
              <option value="kf-norm-totems">King's Fall Totems - Normal</option>
              <option value="kf-norm-warpriest">King's Fall Warpriest - Normal</option>
              <option value="kf-norm-golgoroth">King's Fall Golgoroth - Normal</option>
              <option value="kf-norm-daughters">King's Fall Daughters - Normal</option>
              <option value="kf-norm-oryx">King's Fall Oryx - Normal</option>
              <option value="kf-norm-sherpa">King's Fall Sherpa Help - Normal</option>
            </optgroup>
            <optgroup label="Raid Hard Mode">
              <option value="vog-hard-fr">Vault of Glass Fresh Run - Hard</option>
              <option value="vog-hard-cp">Vault of Glass Checkpoint - Hard</option>
              <option value="vog-hard-boss">Vault of Glass Aetheon - Hard</option>
              <option value="vog-hard-sherpa">Vault of Glass Sherpa Help - Hard</option>
              <option value="crota-hard-fr">Crota's End Fresh Run - Hard</option>
              <option value="crota-hard-cp">Crota's End Checkpoint - Hard</option>
              <option value="crota-hard-boss">Crota's End Crota - Hard</option>
