<%= form_for [@post, Post.new] do |f| %>
<div class="form-group">
  <%= f.label :name, "Add new item:" %>
  <%= f.text_field :name %>
</div>

<div class="panel-heading clearfix">
  <h2>Fill out your LFG!</h2>

  ## #Search begin

    <div class="clearfix">
      <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, placeholder: "Enter Gamertag" %>
      </div>

      <div class="filter-third">
        <div class="styled-select styled-blue">
          <select id="searchConsoles">
            <option value="%">Select Console</option>
            <option value="PS4">Playstation 4</option>
            <option value="XB1">Xbox One</option>
          </select>
        </div>
      </div>
      <div class="filter-third filter-middle">
        <div class="styled-select styled-blue">
          <select id="searchGames">
            <option value="destiny">Destiny</option>
            <option value="grandTheftAuto">Grand Theft Auto Online</option>
            <option value="nba2k">NBA 2k</option>
            <option value="dragonageinquisition">Dragon Age: Inquisition</option>
          </select>
        </div>
      </div>
    ##  #IF DESTINY SELECTED
      <div class="filter-third filter-middle">
        <div class="styled-select styled-blue">
          <select id="searchActivityDestiny">
            <optgroup label="Crucible">
              <option value="too-flawless">Trials of Osiris Flawless </option>
              <option value="too-fun">Trials of Osiris Casual/Fun </option>
              <option value="too-sherpa">Trials of Osiris Sherpa </option>
              <option value="iron-banner">Iron Banner</option>
              <option value="rift">Rift</option>
              <option value="3v3">3v3</option>
              <option value="6v6">6v6</option>
            </optgroup>
            <optgroup label="Raid Normal Mode">
              <option value="vog-norm-fr">Vault of Glass Fresh Run - Normal</option>
